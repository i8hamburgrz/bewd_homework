<h1>Signup</h1>

<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br><br>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <br><br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br><br>



  <%= f.label :skills %>
  <% Skill.all.each do |s| -%>
      <div>
        <%= check_box_tag :skill_ids, s.id, @user.skills.include?(s), :name => 'user[s_ids][]' -%>
        <%= label_tag :skill_ids, s.name -%>
      </div>
    <% end -%>
  <br><br>

  <%= f.submit 'Signup' %>

<% end %>