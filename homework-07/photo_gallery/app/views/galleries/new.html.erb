      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <!-- Begin page content -->
    <div class="container">
      <div class="page-header">
        <h1>Add A Gallery</h1>
      </div>

      <%= form_for @new_gallery do |f| %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Name of your Gallery' %>
        </div>

        <%= f.submit 'Create', class: 'btn btn-success pull-left' %> <%= link_to "Cancel", root_url, {:style=>'margin-left:5px;', :class => "btn btn-danger pull-left"} %>
        <% end %>      
    </div>

    <footer class="footer">
      <div class="container">
        <p class="text-muted">&copy; Steven Brand</p>
      </div>
    </footer>


    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>
  </body>
</html>
