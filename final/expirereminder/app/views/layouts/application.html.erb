<!DOCTYPE html>
<html>
<head>
  <title>Expire Reminder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!-- Custom Fonts -->
  <link href="/assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link href="//fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
</head>
<body id="page-top" class="index">

<% if flash[:error] %>
<!-- error Message -->
<div class="alert alert-danger alert-dismissible col-xs-5" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= flash[:error] %>
</div>
<% end %>

<% if flash[:notice] %>
<!-- Success -->
<div class="alert alert-success alert-dismissible col-xs-5" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <%= flash[:notice] %>
</div>

<% end %>


<!-- Navigation -->
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <% if current_user %>
                <a class="navbar-brand" href="#">Welcome <%= current_user.name %> </a>
            <% else %>
                <a class="navbar-brand" href="#page-top">Expire Reminder</a>
            <% end %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li class="hidden">
                    <a href="#page-top"></a>
                </li>
                <% if current_user %>
                    <li>
                        <a href="/logout">Log Out</a>
                    </li>
                <% else %>
                    <li class="page-scroll">
                        <a href="#" id="login">Login</a>
                    </li>
                    <li class="page-scroll">
                        <a href="#sign-up">Register</a>
                    </li>
                <% end %>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
</nav>

<%= yield %>

</body>
<scrip>
</html>
