  <body>

  <div class="container">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><img src="http://lorempixel.com/1000/200/nature/The%20Zen%20App" class="img-responsive"></h3>
      </div>
      <div class="panel-body">
        <H1 align="center">Today's Zen: <span style="color:<%= @random_color %>"><%= @message %></span></H1>

        <p align="center"><a href="http://www.google.com/#q=<%= @message %>" target="_blank">Google This Zen</a></p>
      </div>
    </div>
  </div>


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
